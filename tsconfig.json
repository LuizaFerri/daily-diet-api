{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["vitest/globals"],
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "outDir": "./build"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
} 